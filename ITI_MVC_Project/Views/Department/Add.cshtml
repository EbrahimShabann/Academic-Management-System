@model Department

@{
    ViewData["Title"] = "Add";
}

<h2>Add New Department</h2>


<hr />


            <form class="m-3" method="post" action="Add">
                <div>
                    <label class="m-2">Department Name</label>
                    <input class="form form-control w-100 m-2" id="Name" name="Name" value="@Model?.Name" type="text" />

                </div>
                <div>
                           <label class="m-2">Manager Name</label>
                           <input class="form form-control w-100 m-2" id="Manager" name="Manager" value="@Model?.Manager" type="text" />
                </div>
                <div class="d-flex justify-content-between">
                <input class="col-6 m-2 btn btn-outline-dark" type="submit" value="Add"  />
                <a class="col-6 m-2 h-50 btn btn-outline-danger" asp-action="Index">Back to List</a>
                </div>
            </form>
        




@{
    ViewData["Title"] = "View";
}


<div class="container">
    <div class="row justify-content-center my-5">
        <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
            <div class="card z-index-2">
                <div class="card-header text-center pt-4">
                    <h5>Display Course Results</h5>
                </div>
                <div class="card-body">
                    <form role="form" method="get" action="/course/courseResults">
                        <div class="mb-3">
                            <input type="text" class="form-control" placeholder="Course Name" aria-label="Name" id="cname" name="cname">
                        </div>


                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-dark w-100 my-4 mb-2">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


